[core]
  ignorecase = true
  excludesfile = ~/.gitignore
[color "status"]
  added = green
  changed = red
  untracked = cyan
[alias]
  br = branch
  co = checkout
  d = diff --color-words
  l  = !"git log --pretty=oneline --graph --abbrev-commit | head -n 10"
  soft-reset = !"git reset --soft HEAD^ && git reset"
  st = status
  ci = commit
[color]
  ui = true
  diff = always
[push]
  default = simple
[include]
  path = ~/.gitconfig_local
